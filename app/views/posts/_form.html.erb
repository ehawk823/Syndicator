<%= form_for(@post) do |f| %>
  <%= f.label :title %>:<br />
  <%= f.text_field :title %><br><br />

  <%= f.label :short_desc %>:<br />
  <%= f.text_field :short_desc %><br><br />

  <%= f.label :full_desc %>:<br />
  <%= f.text_area :full_desc %><br><br />

  <%= f.label :price %>:<br />
  <%= f.text_field :price %><br><br />

  <%= f.label :phone %>:<br />
  (Add a number to text an update)<br /> 
  <%= f.text_field :phone %><br><br />

  <%= f.hidden_field :is_new, value: true %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
