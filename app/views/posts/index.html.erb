<p id="notice"><%= notice %></p>

<div class="page-header">
<h2><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Current Event Postings</h2>
</div>
<div class="well">

    <% @posts.each do |post| %>

        <font size="3">
          <%= post.title %> -
          $<%= post.price %>
        </font>
        <br>
        <%= link_to 'Show', post %>
        <% if user_signed_in? %>
          <% if current_user[:admin] == true %>
            | <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %>
        <br></br>

    <% end %>

</div>

<br>
