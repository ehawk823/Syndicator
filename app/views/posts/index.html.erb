<p id="notice"><%= notice %></p>

<div class="page-header">
<h2><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Current Event Postings</h2>
</div>
<div class="well">
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <font size="3">
          <%= post.title %> -
          $<%= post.price %>
        </font>
        <br>
        <td><%= link_to 'Show', post %> </td>
        <% if user_signed_in? %>
          <% if current_user[:admin] == true %>
            <td> |<%= link_to 'Edit', edit_post_path(post) %>| </td>
            <td> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>
</div>

<br>
